<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<BorderPane
        xmlns="http://javafx.com/javafx/11.0.1"
        xmlns:fx="http://javafx.comfxml/1"
        prefHeight="200.0" prefWidth="400.0" BorderPane.alignment="CENTER">

    <top>
        <Label fx:id="msg" BorderPane.alignment="CENTER">
            <font>
                <Font size="25.0"/>
            </font>
        </Label>
    </top>
    <center>
        <ImageView fx:id="image"/>
    </center>
    <bottom>
        <Button onAction="#clicked" maxWidth="Infinity" minWidth="-Infinity" text="BUTTON">
            <font>
                <Font size="20.0"/>
            </font>
        </Button>
    </bottom>
</BorderPane>
